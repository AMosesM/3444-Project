<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GreyBB"
    tools:context=".MainActivity"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topMALayout">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/bulblogo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/imageView"
            android:text="@string/app_name"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/WhiteBB"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/middleMALayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topMALayout"
        android:layout_marginTop="30dp">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomAMLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_below="@+id/middleMALayout">

        <Button

            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/New"
            android:fontFamily="sans-serif"
            android:textColor="@color/WhiteBB"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:padding="15dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/ic_newproj" />


    </RelativeLayout>





</RelativeLayout>