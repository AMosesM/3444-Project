<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GreyBB"
    tools:context=".ThemeActivity"
    android:padding="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topTLayout">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/selectThemeImage"
            android:src="@drawable/ic_settings"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theme Setup"
            android:layout_below="@+id/selectThemeImage"
            android:layout_marginTop="40dp"
            android:textColor="@color/WhiteBB"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/selectTheme_Text"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/middleTLayout"
        android:layout_below="@+id/topTLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <Spinner
            android:id="@+id/themespinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/middleTLayout"
        android:layout_marginTop="50dp"
        android:id="@+id/bottomTLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/themeBtn"
            android:text="Build Project"
            android:layout_centerHorizontal="true"
            android:textColor="@color/WhiteBB"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="15dp"
            android:background="@drawable/green_button_border" />


    </RelativeLayout>



</RelativeLayout>