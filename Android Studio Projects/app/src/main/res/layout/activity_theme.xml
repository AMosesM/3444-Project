<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemeActivity"
    android:background="@color/GreenBB"
    android:padding="15dp">
    <RelativeLayout
        android:id="@+id/topTLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/selectThemeImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_settings" />
        <TextView
            android:id="@+id/selectTheme_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/selectThemeImage"
            android:text="Theme Setup"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/WhiteBB"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center" />

    </RelativeLayout>
    <RelativeLayout

        android:id="@+id/middleTLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topTLayout"
        android:layout_marginTop="30dp">

        <Spinner
            android:id="@+id/themespinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#C1C8C9"

            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomTLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/middleTLayout"
        android:layout_marginTop="50dp">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_below="@+id/middleTLayout">

        <Button
            android:id="@+id/themeBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/ic_nextbutton"
            android:fontFamily="sans-serif"
            android:padding="15dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/WhiteBB"
            android:textSize="25sp"/>

    </RelativeLayout>



</RelativeLayout>