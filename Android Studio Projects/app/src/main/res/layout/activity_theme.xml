<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemeActivity"
    android:background="@color/GreyBB">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topTLayout">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/selectThemeImage"
            android:src="@drawable/ic_settings"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a theme"
            android:layout_below="@+id/selectThemeImage"
            android:layout_marginTop="40dp"
            android:textColor="@color/WhiteBB"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/selectTheme_Text"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/middleTLayout"
        android:layout_below="@+id/topTLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">
        <Spinner

            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/themeSpinner"
            android:background="@color/GreenBB"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/middleTLayout"
        android:layout_marginTop="20dp"

        android:id="@+id/bottomTLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/themeBtn"
            android:padding="15dp"
            android:background="@drawable/green_button_border"
            android:text="Select Theme"
            android:textStyle="bold"
            android:textColor="@color/WhiteBB"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>



</RelativeLayout>