<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongActivity"
    android:background="@color/GreyBB">

    <RelativeLayout
        android:id="@+id/topSLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/selectSongImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/img"
            android:src="@drawable/ic_music_note" />

        <TextView
            android:id="@+id/selectSong_Text"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectSongImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textColor="@color/WhiteBB"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="@string/SongActivityMainText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomSLayout"
        android:layout_width="match_parent"
        android:layout_height="178dp"

        android:layout_below="@+id/topSLayout"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/uploadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectSong"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="152dp"
            android:background="@drawable/green_button_border"
            android:padding="15dp"
            android:text="@string/SongActivityButtonText"
            android:textColor="@color/WhiteBB"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/selectSong"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="84dp"
            android:fontFamily="serif"
            android:text="@string/click_here_to_select_a_song"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#7C7C7C"
            android:background="@color/GreenBB"
            style="?android:attr/spinnerStyle"/>
    </RelativeLayout>


</RelativeLayout>