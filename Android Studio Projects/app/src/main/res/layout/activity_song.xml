<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongActivity"
    android:background="@color/GreyBB">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topSLayout">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/selectSongImage"
            android:src="@drawable/ic_music_note"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a song"
            android:layout_below="@+id/selectSongImage"
            android:layout_marginTop="40dp"
            android:textColor="@color/WhiteBB"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/selectSong_Text"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/middleSLayout"
        android:layout_below="@+id/topSLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/openDoc"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:fontFamily="sans-serif"
            android:text="@string/filepath"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#525252"
            android:textStyle="bold" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/middleSLayout"
        android:layout_marginTop="20dp"

        android:id="@+id/bottomSLayout">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:id="@+id/uploadBtn"
            android:background="@drawable/green_button_border"
            android:text="Upload"
            android:textStyle="bold"
            android:textColor="@color/WhiteBB"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


</RelativeLayout>