<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95AAA2"
    tools:context=".ConnectBulbActivity"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topCBALayout">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/connectBulbImage"
            android:src="@drawable/ic_connect_blb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect to a bulb"
            android:layout_below="@+id/connectBulbImage"
            android:layout_marginTop="40dp"
            android:textColor="@color/WhiteBB"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/songTitle"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topCBALayout"
        android:layout_marginTop="30dp"
        android:id="@+id/middleCBALayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=">"
            android:textColor="@color/WhiteBB"
            android:textAllCaps="true"
            android:textSize="50sp"
            android:textStyle="bold"
            android:id="@+id/connectScannerBtn"
            android:gravity="right"
            android:paddingRight="30dp"
            android:background="@color/GreyBB"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/middleCBALayout"
        android:layout_marginTop="50dp"
        android:id="@+id/bottomCBALayout">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:layout_centerHorizontal="true"
            android:textColor="@color/WhiteBB"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/connectBtn"
            android:padding="15dp"
            android:background="@color/GreyBB"/>


    </RelativeLayout>

</RelativeLayout>