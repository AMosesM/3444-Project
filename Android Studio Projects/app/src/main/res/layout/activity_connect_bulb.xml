<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectBulbActivity"
    android:background="@color/GreenBB"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/topCBALayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/connectBulbImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_connect_blb" />

        <TextView
            android:id="@+id/songTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/connectBulbImage"
            android:text="Bulb Setup"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/WhiteBB"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/middleCBALayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topCBALayout"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/connectScannerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_bluetooth_searching_24px"
            android:layout_marginTop="20dp"
            android:textColor="@color/WhiteBB"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:background="@drawable/ic_search"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomCBALayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_below="@+id/middleCBALayout">

        <Button
            android:id="@+id/connectBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/ic_nextbutton"
            android:fontFamily="sans-serif"
            android:padding="15dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/WhiteBB"
            android:textSize="25sp" />


    </RelativeLayout>

</RelativeLayout>